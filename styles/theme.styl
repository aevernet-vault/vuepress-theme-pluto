@require './palette.styl'
@require './code'
@require './custom-blocks'
@require './arrow'
@require './wrapper'
@require './toc'
@require './home'
@require './element-tabs.styl'
@require './animate.min.css'
@require './icon.styl'

html, body
  padding 0
  margin 0
  font-size 15px
  background-color var(--background-color)
  transition color .2s, background-color .2s
body
  font-family Ubuntu, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color var(--text-color)
  background-color var(--background-color)

/* 布局 */
.theme-main
  display flex
  max-width $pageWidth
  margin 0 auto
  margin-top $navbarHeight
.page
  flex 1
  // fixed：图片全屏时被截断
  // overflow-x hidden
  max-width $contentWidth
  margin 0 auto
  padding 0

.sidebar, .toc
  z-index 10
  position sticky // => fixed
  overflow-y auto
  box-sizing border-box
  top $navbarHeight
  height 'calc(100vh - %s)' % $navbarHeight
  margin 0
  padding 1rem 0
  background-color var(--background-color-block)
.sidebar
  width $sidebarWidth
  border-right 1px solid var(--border-color)
.toc
  width $tocWidth
  border-left 1px solid var(--border-color)

.navbar-sub, .navbar-active
  width 100vw
  color var(--text-color)
  background-color var(--background-color-block)
.navbar-sub
  z-index 99
  position fixed
  top $navbarHeight
  height $navbarSubHeight
.navbar-active
  z-index 19
  position fixed
  top $navbarHeight + $navbarSubHeight
  height $navbarActiveHeight

.navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $navbarHeight
  color var(--text-color)
  border none
  background-color var(--background-color-block)
  .site-name
    color var(--text-color)
  .links
    color var(--text-color)
    background-color var(--background-color-block)
    a
      &:hover
        color $accentColor
.dropdown-wrapper
  .dropdown-title
    color var(--text-color)
    &:hover
      color $accentColor
  .nav-dropdown
    border none
    box-shadow var(--box-shadow)
    background-color var(--background-color-block)
    h4
      color var(--text-color-sub)

/* mask */
.sidebar-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  display none
  background-color: rgba(0,0,0,.65);
.toc-mask
  position fixed
  z-index 9
  top 0
  left 0
  width 100vw
  height 100vh
  background-color rgba(0, 0, 0, .65)
.setting-mask
  position fixed
  z-index 100
  top 0
  left 0
  width 100vw
  height 100vh
  background-color rgba(0, 0, 0, .65)

.content__default:not(.custom)
  @extend $wrapper
  a:hover
    text-decoration underline
  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px
  img
    max-width 100%
  *:first-child
    margin-top 0

.content__default.custom
  padding 0
  margin 0
  img
    max-width 100%

.abstract
  img
    max-width 100%

a
  font-weight 500
  color $accentColor
  text-decoration none

li
  p.sidebar-heading
    color var(--text-color)
  a.sidebar-link
    color var(--text-color)

p a code
  font-weight 400
  color $accentColor

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size .9rem
  color #999
  border-left .25rem solid #999
  background-color var(--background-color-block)
  margin 0.5rem 0
  padding .25rem 0 .25rem 1rem
  & > p
    margin 0

ul, ol
  padding-left 1.2em

strong
  font-weight 600

h1, h2, h3, h4, h5, h6
  font-weight 500
  line-height 1.25
  .content__default:not(.custom) > &
    /* margin-top (2.1rem - $navbarHeight)
    padding-top $navbarHeight
    margin-bottom 1rem */
    &:first-child
      margin-top -4.5rem

h1
  font-size 1.6rem

h2
  font-size 1.4rem
  border none

h3
  font-size 1.2rem

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0.23em
  margin-top 0.125em
  opacity 0
  &:hover
    text-decoration none

code, kbd, .line-number
  font-family source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p, ul, ol
  line-height 2.2

hr
  border 0
  border-top 1px solid var(--text-color)

table
  border-collapse collapse
  margin 1rem 0
  display: block
  overflow-x: auto
  // box-shadow var(--box-shadow)
  thead
    background-color $accentColor

tbody tr
  background-color var(--background-color)
  border-top 1px solid var(--border-color)
  &:first-child
    border-top none
  &:nth-child(2n)
    background-color var(--background-color-block)

th, td
  border 1px solid var(--border-color)
  border-color transparent
  padding .6em 1em

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block
  &.no-navbar
    .content__default:not(.custom) > h1, h2, h3, h4, h5, h6
        margin-top 1.5rem
        padding-top 0
    .sidebar
      top 0


/* 媒体查询 */
@require 'mobile.styl'

.iconfont
  font-family: "iconfont",Ubuntu,-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif !important
  font-size: 13px;
  color: var(--text-color-sub);

/************** 滚动条 **************/
::-webkit-scrollbar
  width: 5px;
  height: 5px;

::-webkit-scrollbar-track-piece
  // background-color: rgba(0, 0, 0, 0.2);

::-webkit-scrollbar-thumb:vertical
  height: 5px;
  background-color: $accentColor;

::-webkit-scrollbar-thumb:horizontal
  width: 5px;
  background-color: $accentColor;

/************** 流程图的滚动条 **************/
.vuepress-flowchart
  overflow: auto

/************** SW-Update Popup **************/
.sw-update-popup
  border-radius: $borderRadius!important;
  box-shadow: var(--box-shadow)!important;
  color: var(--text-color)!important;
  background: var(--background-color)!important;
  border: none!important;
  > button
    background: $accentColor;
    border-radius: $borderRadius;
    color: #fff;
    -webkit-tap-highlight-color:rgba(0, 0, 0, 0)
    border: none;
